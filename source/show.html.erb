<html>

   <div class="wrapper-card">
        <div class="container">
          <div class="row">

              <div class="col-xs-12 col-md-4">
                <div class = "card" style="background: url(/images/<%=card.background%>)">
                  <div class="card-city">
                    <h2><%= card.city %></h2>
                  </div>
                  <div class="card-owner">
                    <h3><%= "#{card.owner.capitalize}s House"%></h3>
                  </div>
                  <div class="card-description">
                    <h3><%= card.description%></h3>
                  </div>
                  <%= image_tag "#{card.avatar}", class: "avatar"%>
                </div>
              </div>

          </div>
        </div>
      </div>

</html>
